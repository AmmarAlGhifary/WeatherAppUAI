<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WeatherAppUAI" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_primary_light</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/purple_primary</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorSecondary">@color/grey_800</item>
        <item name="colorOnSecondary">@color/grey_200</item>
        <item name="colorSecondaryContainer">@color/grey_900</item>
        <item name="colorOnSecondaryContainer">@color/grey_500</item>

        <item name="android:colorBackground">@color/grey_900</item>
        <item name="colorSurface">@color/grey_800</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/grey_200</item>
        <item name="colorSurfaceVariant">@color/grey_700</item>
        <item name="colorError">@android:color/holo_red_light</item>
        <item name="colorOnError">@color/black</item>

        <item name="android:statusBarColor">@color/grey_900</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <item name="android:windowSplashScreenBackground" tools:ignore="NewApi">
            @color/purple_primary
        </item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:ignore="NewApi">
            @drawable/ic_logo
        </item>
        <item name="android:windowSplashScreenAnimationDuration" tools:ignore="NewApi">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.WeatherAppUAI</item>
    </style>
</resources>